<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Main Image -->
        <ImageView
            android:id="@+id/result_edge_pencil_sketch_generation"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cor_s2w" />

        <!-- Back Arrow (top-left) -->
        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@id/result_edge_pencil_sketch_generation"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:contentDescription="Previous"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_arrow_circle_left_24" />

        <!-- Forward Arrow (top-right) -->
        <ImageView
            android:id="@+id/arrow_forward"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@id/result_edge_pencil_sketch_generation"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:contentDescription="Next"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_arrow_circle_right_24" />

        <!-- Share & Download Buttons -->
        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/result_edge_pencil_sketch_generation"
            android:background="#1C2B46"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/result_share_btn_pencil_sketch_generation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_share_24"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/result_download_btn_pencil_sketch_generation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_download_24"
                app:tint="@color/white" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>


